    "@rollup/plugin-babel": "^5.2.1",
    "@rollup/plugin-commonjs": "^16.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^10.0.0",
    "auto-changelog": "^2.2.0",
    "autoprefixer": "^9.0.0",
    "cpx2": "^3.0.0",
    "eslint": "^7.12.1",
    "gh-release": "^4.0.0",
    "mkdirp": "^1.0.4",
    "npm-run-all2": "^5.0.0",
    "postcss": "^7.0.0",
    "postcss-extend": "^1.0.5",
    "postcss-nesting": "^7.0.0",
